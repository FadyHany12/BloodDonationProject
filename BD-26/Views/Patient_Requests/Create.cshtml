@model BD_26.Models.Patient_Requests

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Staff_Layout.cshtml";
}
<div class="container" style="background: white">
    <h2>Create</h2>

    @using (Html.BeginForm("Create", "Patient_Requests", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

